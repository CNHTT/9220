<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_bg_color"
    tools:context="com.szfp.bettwostar.PosfunctionResultActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_gray"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:background="@color/cpb_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/length_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ems="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week"/>

            <EditText
                android:id="@+id/et_user_first_name"
                android:layout_marginStart="@dimen/length_10"
                android:background="@drawable/et_bg"
                android:padding="@dimen/length_10"
                android:singleLine="true"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"/>

        </LinearLayout>





            <TextView
                android:textColor="@color/red"
                android:textSize="@dimen/text_font_20"
                android:padding="@dimen/text_font_20"
                android:id="@+id/tv_result"
                android:layout_marginTop="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




    </LinearLayout>

</RelativeLayout>
