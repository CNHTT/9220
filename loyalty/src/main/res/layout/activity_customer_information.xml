<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_bg_color"
    tools:context="com.extra.loyalty.view.activity.CustomerInformationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/all_bg_color"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_action" />

                <TextView
                    android:id="@+id/ns_customer_action"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/n_str"  />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allowed_campaigns"/>

                <TextView
                    android:id="@+id/tv_allowed_campaigns"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_number_str"/>

                <TextView
                    android:id="@+id/tv_card_number"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/code"/>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_first_name"/>

                <EditText
                    android:id="@+id/et_user_first_name"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_last_name"/>

                <EditText
                    android:id="@+id/et_user_last_name"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/street1"/>

                <EditText
                    android:id="@+id/et_street1"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/street2"/>

                <EditText
                    android:id="@+id/et_street2"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"/>

                <EditText
                    android:id="@+id/et_city"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"/>

                <EditText
                    android:id="@+id/et_state"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postal_code"/>

                <EditText
                    android:id="@+id/et_postal_code"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/country"/>

                <EditText
                    android:id="@+id/et_country"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_add"/>

                <EditText
                    android:id="@+id/et_auto_add"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_field"/>

                <EditText
                    android:id="@+id/et_custom_field"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_username"/>

                <EditText
                    android:id="@+id/et_customer_username"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_password"/>

                <EditText
                    android:id="@+id/et_customer_password"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="TextFields" />
            </LinearLayout>


            <LinearLayout
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_PIN"/>

                <EditText
                    android:id="@+id/et_custom_PIN"
                    android:layout_marginStart="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="LabelFor,TextFields" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bt_button_bg"
                android:text="@string/create_new_user"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
