<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_bg_color"
    tools:context="com.extra.loyalty.view.activity.PrivateSettings">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/all_bg_color"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    
    
    <ScrollView
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header"/>

                <EditText
                    android:gravity="left|top"
                    android:id="@+id/et_head"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"/>

                <EditText
                    android:gravity="left|top"
                    android:id="@+id/et_title"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:padding="@dimen/length_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ems="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/footer"/>

                <EditText
                    android:gravity="left|top"
                    android:id="@+id/et_footer"
                    android:layout_marginLeft="@dimen/length_10"
                    android:background="@drawable/et_bg"
                    android:padding="@dimen/length_10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>


            <Button
                android:id="@+id/bt_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:background="@drawable/bt_login_bg"/>


        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
